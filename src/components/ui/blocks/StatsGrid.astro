---
import Icon from "@components/ui/icons/Icon.astro";

const { count, description, index } = Astro.props;

interface Props {
  count: string;
  description: string;
  index: number;
}
---

<div class="flex flex-col items-center">
  <div
    class="mb-3 flex items-center justify-center gap-x-2 text-4xl font-bold text-primary-600 dark:text-primary-400 sm:text-6xl"
  >
    {index === 1 || index === 2 ? <Icon name="arrowUp" /> : null}
    {count}
  </div>
  <p class="text-sm text-neutral-600 dark:text-neutral-400 sm:text-base text-center">
    {description}
  </p>
</div>
