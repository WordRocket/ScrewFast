---
const { url } = Astro.props;
interface Props {
  url: string;
}
const linkClass =
  "inline-flex h-10 w-10 items-center justify-center gap-x-2 rounded-xl border border-transparent text-sm font-bold text-neutral-600 outline-hidden ring-primary-500 transition-all duration-200 hover:bg-primary-100 hover:text-primary-700 hover:scale-110 focus:outline-hidden focus-visible:ring-2 dark:text-neutral-400 dark:ring-primary-400 dark:hover:bg-primary-950/50 dark:hover:text-primary-300";
---

<a class={linkClass} href={url} target="_blank" rel="noopener noreferrer">
  <slot />
</a>
