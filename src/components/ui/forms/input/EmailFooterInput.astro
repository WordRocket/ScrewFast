---
const {
  label = "Search",
  title = Astro.currentLocale === "fr" ? "S'abonner" : "Subscribe",
  id = "footer-input",
} = Astro.props;

interface Props {
  label?: string;
  title?: string;
  id?: string;
}

const placeholder = Astro.currentLocale === "fr" ? "Entrez votre email" : "Enter your email";
---

<div
  class="mt-6 flex flex-col items-center gap-3 rounded-xl bg-white border border-neutral-200 p-3 shadow-soft dark:bg-neutral-800 dark:border-neutral-700 sm:flex-row sm:gap-4"
>
  <div class="w-full">
    <label for={id} class="sr-only">{label}</label>
    <input
      type="text"
      id={id}
      name="footer-input"
      class="block w-full rounded-lg border-transparent bg-neutral-50 px-4 py-3 text-sm text-neutral-700 focus:border-primary-400 focus:ring-primary-400 transition-all duration-200 disabled:pointer-events-none disabled:opacity-50 dark:border-transparent dark:bg-neutral-700 dark:text-neutral-300 dark:placeholder:text-neutral-400"
      placeholder={placeholder}
    />
  </div>
  <a
    class="btn-primary sm:w-auto whitespace-nowrap"
    href="#"
  >
    {title}
  </a>
</div>
