---
// Import necessary modules and utilities
import { Image } from "astro:assets";
import Icon from "@components/ui/icons/Icon.astro";
import type { CollectionEntry } from "astro:content";

const { product, productLocale = "" } = Astro.props;

interface Props {
  product: CollectionEntry<"products">;
  productLocale?: string;
}

// Define classes to be used with the Image component
const imageClass =
  "absolute inset-0 h-full w-full object-cover object-center transition duration-[600ms] ease-[cubic-bezier(0.45,0,0.55,1)] group-hover:scale-110";
---

<!-- A clickable card that leads to the details of the product-->
<a
  href={productLocale && productLocale !== "en"
    ? `/${productLocale}/products/${product.id.replace(/^fr\//, "")}/`
    : `/products/${product.id.replace(/^en\//, "")}/`}
  data-astro-prefetch
  class="group relative flex h-64 items-end overflow-hidden rounded-2xl shadow-soft outline-hidden ring-primary-500 focus-visible:ring-2 transition-all duration-500 hover:shadow-large hover:-translate-y-2 dark:ring-primary-400 dark:focus:outline-hidden md:h-80"
>
  <!-- The product's main image -->
  <Image
    src={product.data.main.imgCard}
    alt={product.data.main.imgAlt}
    draggable={"false"}
    class="absolute inset-0 h-full w-full object-cover object-center transition-transform duration-700 ease-out group-hover:scale-110"
    format={"avif"}
  />
  <!-- An overlay gradient that sits on top of the product image-->
  <div
    class="pointer-events-none absolute inset-0 bg-gradient-to-t from-neutral-900/80 via-neutral-900/20 to-transparent transition-opacity duration-500 group-hover:from-neutral-900/90"
  >
  </div>
  <!-- The product's subtitle and the anchor SVG icon-->
  <span
    class="relative mb-6 ml-6 inline-flex items-center gap-2 text-base font-semibold text-white transition-all duration-500 ease-out group-hover:scale-105 group-hover:text-primary-200 md:ml-8 md:text-lg"
  >
    {product.data.description}
    <Icon name="openInNew" />
  </span>
</a>
